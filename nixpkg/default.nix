rustPlatform.buildRustPackage rec {
  pname = "zknotes-server";
  version = "1.0";

  # ui = callPackage ./ui.nix { };

  src = fetchFromGitHub {
    owner = "bburdette";
    repo = "zknotes";
    rev = "06a33d172f22ebdbdde6064f9d7c028061e2377a";
    sha256 = "0v9b6mar6cf0cqdwc2q8snm2lfqkblniql3sbqv74r36swqb30wy";
