  src = fetchFromGitHub {
    owner = "bburdette";
    repo = "zknotes";
    rev = "a536e02cd3635b507d5bc6c117cf45d7204edeb8";
    sha256 = "02kgxmbjlgqwl959jp2zbzm1vav5a7p6rasyxwbls0jm0qjkzk7y";
