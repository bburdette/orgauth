rustPlatform.buildRustPackage rec {
  pname = "zknotes-server";
  version = "1.0";

  # ui = callPackage ./ui.nix { };

  src = fetchFromGitHub {
    owner = "bburdette";
    repo = "zknotes";
    rev = "9621b09d4422633feffeb178be63b102c2c9aafb";
    sha256 = "0lsj4bvjg2mknp39z1jxi97ihhm482zdnhkzcdc4p425i5zrvpld";
